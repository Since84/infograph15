<div 
	class= 	"nav-item {% if slide.id == current[0].id %}current{% endif %}"  
	style="background-image:url({{ slide.thumbnail }});">
	<h4>
		<span class="date">
		{% if slide.id == current.id %} Current Topic
		{% elseif slide.type == "Upcoming" %} Upcoming
		{% else %} {{ slide.display_date }} {{ slide.type }}
		{% endif %}
		</span>
	</h4>
	<h3>
		{{ slide.post_title }}
	</h3>
</div>